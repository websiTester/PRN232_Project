@model FormFeedbackViewModel
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Để lại đánh giá</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" xintegrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Bootstrap Icons (cho đánh giá sao) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        /* Tùy chỉnh nhỏ cho tiêu đề */
        body {
            background-color: #f5f5f5;
        }

        .page-title {
            color: #333;
            border-bottom: 2px solid #eee;
            padding-bottom: 10px;
            display: flex;
            align-items: center;
        }

            .page-title .bi-star-fill {
                color: #f8c000;
                margin-right: 10px;
                font-size: 1.5rem;
            }

        /* Kiểu dáng cho phần đánh giá sao (DSR) */
        .dsr-label {
            font-weight: 500;
            color: #555;
        }

        /* ĐÃ XÓA TẤT CẢ CSS CỦA .star-rating TỪ ĐÂY
                   (vì chúng ta không còn dùng sao nữa)
                */

    </style>
</head>
<body>

    <div class="container my-5">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">

                <!-- Tiêu đề trang --><h1 class="page-title mb-4">
                    <i class="bi bi-star-fill"></i>
                    Form để lại đánh giá
                </h1>
                <p class="text-muted">Bạn đang để lại đánh giá cho Người bán: <strong>@Model.OrderTable.OrderItems.ToList()[0].Product.Seller.Username</strong></p>

                <!-- Tính năng 1: Hiển thị danh sách đơn hàng đã hoàn tất --><!-- Bắt đầu một mục đánh giá cho đơn hàng --><div class="card shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Đơn hàng hoàn tất: 01-11-2025</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <!-- Thông tin sản phẩm --><div class="col-md-3 text-center">
                                <img src="https://placehold.co/150x150/e0e0e0/777?text=Sản+phẩm+A" class="img-fluid rounded border" alt="Sản phẩm A">
                            </div>

                            <div class="col-md-9">
                                <h4 class="h6">Sản phẩm: @Model.OrderTable.OrderItems.ToList()[0].Product.Title</h4>
                                <p class="small text-muted">Mã đơn: #123-456789-01</p>

                                <hr>
                                <form asp-action="FormFeedback" method="post">
                                    <input type="hidden" asp-for="@Model.OrderTableId" value="@Model.OrderTable.Id" />
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">1. Đánh giá chung của bạn về giao dịch này:</label>
                                        <div class="form-check">
                                            <input asp-for="PositiveRate" id="positive1" class="form-check-input" type="radio" value="1" checked>
                                            <label class="form-check-label" for="positive1">
                                                <i class="bi bi-plus-circle-fill text-success"></i> Tích cực (Positive)
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input asp-for="PositiveRate" id="neutral1" class="form-check-input" type="radio" value="0">
                                            <label class="form-check-label" for="neutral1">
                                                <i class="bi bi-circle-fill text-warning"></i> Trung lập (Neutral)
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input asp-for="PositiveRate" id="negative1" class="form-check-input" type="radio" value="-1">
                                            <label class="form-check-label" for="negative1">
                                                <i class="bi bi-dash-circle-fill text-danger"></i> Tiêu cực (Negative)
                                            </label>
                                        </div>
                                    </div>



                                    <div class="mb-3">
                                        <label class="form-label fw-bold d-block mb-2">3. Đánh giá chi tiết về người bán (DSR):</label>

                                        <div class="row align-items-center mb-2">
                                            <div class="col-sm-5 col-6">
                                                <span class="dsr-label">Hàng đúng như mô tả:</span>
                                            </div>
                                            <div class="col-sm-7 col-6">
                                                <!-- THAY THẾ div.star-rating BẰNG select -->
                                                <select asp-for="ExactSame" class="form-select form-select-sm" aria-label="Đánh giá Hàng đúng như mô tả">
                                                    <option value="1">1 sao</option>
                                                    <option value="2">2 sao</option>
                                                    <option value="3">3 sao</option>
                                                    <option value="4">4 sao</option>
                                                    <option value="5" selected>5 sao</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="row align-items-center mb-2">
                                            <div class="col-sm-5 col-6">
                                                <span class="dsr-label">Giao tiếp với người bán:</span>
                                            </div>
                                            <div class="col-sm-7 col-6">

                                                <select asp-for="Communication" class="form-select form-select-sm" aria-label="Đánh giá Giao tiếp với người bán">
                                                    <option value="1">1 sao</option>
                                                    <option value="2">2 sao</option>
                                                    <option value="3">3 sao</option>
                                                    <option value="4">4 sao</option>
                                                    <option value="5" selected>5 sao</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="row align-items-center mb-2">
                                            <div class="col-sm-5 col-6">
                                                <span class="dsr-label">Thời gian vận chuyển:</span>
                                            </div>
                                            <div class="col-sm-7 col-6">
                                                <select asp-for="DeliveryOnTime" class="form-select form-select-sm" aria-label="Đánh giá Thời gian vận chuyển">
                                                    <option value="1">1 sao</option>
                                                    <option value="2">2 sao</option>
                                                    <option value="3">3 sao</option>
                                                    <option value="4">4 sao</option>
                                                    <option value="5" selected>5 sao</option>
                                                </select>
                                            </div>
                                        </div>

                                    </div>

                                    <button type="submit" class="btn btn-primary btn-lg mt-3">Gửi đánh giá</button>
                                </form>
                               
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (Không bắt buộc cho UI này, nhưng cần cho các thành phần BS khác) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" xintegrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <!-- ĐÃ XÓA TOÀN BỘ KHỐI JAVASCRIPT CHO SAO
        (vì chúng ta không còn dùng sao nữa)
    -->

</body>
</html>