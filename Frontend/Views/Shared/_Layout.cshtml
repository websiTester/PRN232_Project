@inject IHttpContextAccessor HttpContextAccessor
@{
    var username = HttpContextAccessor.HttpContext.Session.GetString("Username");
    var userId = HttpContextAccessor.HttpContext.Session.GetString("UserId");
    var role = HttpContextAccessor.HttpContext.Session.GetString("Role");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eBay Clone</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/chat.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="header-container">
        <nav class="gh-nav">
            <div class="container-fluid px-3 px-md-4">
                <div class="d-flex justify-content-between align-items-center w-100">
                    <div class="gh-nav-left">
                        @if (!string.IsNullOrEmpty(username))
                        {
                            <span>Hi, <a href="#" class="fw-bold">@username</a>!</span>
                        }
                        else
                        {
                            <span>Hi, <a href="~/Auth/Login">Sign in</a>!</span>
                        }
                        <a href="#">Daily Deals</a>
                        <a href="#">Brand Outlet</a>
                        <a href="/dispute/create">View All Dispute</a>
                        @if (role == "buyer")
                        {
                            <a href="/dispute/buyer/@userId">SendedDispute</a>
                        }
                        else if (role == "seller")
                        {
                            <a href="/dispute/seller/@userId">Seller Dispute</a>
                        }
                        else if (role == "supporter")
                        {
                            <a href="/dispute/supporter">Support Dispute</a>
                        }
                        else
                        {
                            <a href="#">Dispute</a>
                        }


                    </div>
                    <div class="gh-nav-right">
                        <img src="https://placehold.co/24x16?text=VN" alt="VN Flag" />
                        <span>Ship to</span>
                        <a href="#">Sell</a>

                        <div class="dropdown">
                            <span>Watchlist</span>
                            <div class="dropdown-content">
                                <span class="dropdown-item">No items in watchlist</span>
                            </div>
                        </div>

                        <div class="dropdown">
                            <span>My eBay</span>
                            <div class="dropdown-content">
                                <a href="#" class="dropdown-item">Summary</a>
                                <a href="#" class="dropdown-item">Recently Viewed</a>
                                <a href="#" class="dropdown-item">Bids/Offers</a>
                                <a href="#" class="dropdown-item">Watchlist</a>

                                <a asp-controller="Purchase" asp-action="Index" class="dropdown-item">Purchase History</a>
                                <a asp-controller="Sales" asp-action="Index" class="dropdown-item">My Orders</a>
                                <a href="#" class="dropdown-item">Buy Again</a>
                                <a href="#" class="dropdown-item">Selling</a>
                                <a href="#" class="dropdown-item">Saved Searches</a>
                                <a href="#" class="dropdown-item">Saved Sellers</a>
                                <a href="#" class="dropdown-item">My Garage</a>
                                <a href="#" class="dropdown-item">Sizes</a>
                                <a href="#" class="dropdown-item">My Collection</a>
                                <a href="#" class="dropdown-item">Messages</a>
                                <a href="#" class="dropdown-item">PSA Vault</a>
                            </div>
                        </div>

                        <a href="#">ðŸ””</a>
                        <a href="#">ðŸ›’</a>
                    </div>
                </div>
            </div>
        </nav>

        <header class="main-header">
            <div class="container-fluid px-3 px-md-4">
                <div class="search-container">
                    <a href="/" class="ebay-logo">
                        <img src="https://placehold.co/100x60?text=eBAY" alt="eBay Logo" />
                    </a>

                    <button type="button" class="category-btn">
                        Shop by category
                    </button>

                    <form class="search-form">
                        <input type="text" class="search-input" placeholder="Search for anything" />
                        <button type="submit" class="search-button">Search</button>
                    </form>

                    <a href="#" class="advanced-link">Advanced</a>
                </div>
            </div>
        </header>
    </div>

    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container-fluid px-3 px-md-4">
            <div class="row">
                <div class="col footer-column">
                    <h4>Buy</h4>
                    <ul>
                        <li><a href="#">Registration</a></li>
                        <li><a href="#">Money Back Guarantee</a></li>
                        <li><a href="#">Bidding & buying help</a></li>
                        <li><a href="#">Stores</a></li>
                        <li><a href="#">eBay for Charity</a></li>
                        <li><a href="#">Charity Shop</a></li>
                        <li><a href="#">Seasonal Sales</a></li>
                    </ul>
                </div>

                <div class="col footer-column">
                    <h4>Sell</h4>
                    <ul>
                        <li><a href="#">Start selling</a></li>
                        <li><a href="#">Learn to sell</a></li>
                        <li><a href="#">Business sellers</a></li>
                        <li><a href="#">Affiliates</a></li>
                    </ul>
                </div>

                <div class="col footer-column">
                    <h4>Tools & Apps</h4>
                    <ul>
                        <li><a href="#">Developers</a></li>
                        <li><a href="#">Security center</a></li>
                        <li><a href="#">Site map</a></li>
                        <li><a href="#">Seller center</a></li>
                    </ul>
                </div>

                <div class="col footer-column">
                    <h4>Stay Connected</h4>
                    <ul>
                        <li><a href="#">Facebook</a></li>
                        <li><a href="#">Twitter</a></li>
                        <li><a href="#">Instagram</a></li>
                        <li><a href="#">eBay's Blogs</a></li>
                    </ul>
                </div>

                <div class="col footer-column">
                    <h4>About eBay</h4>
                    <ul>
                        <li><a href="#">Company info</a></li>
                        <li><a href="#">News</a></li>
                        <li><a href="#">Investors</a></li>
                        <li><a href="#">Careers</a></li>
                        <li><a href="#">Government relations</a></li>
                        <li><a href="#">Advertise with us</a></li>
                        <li><a href="#">Policies</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/%40microsoft/signalr@8.0.8/dist/browser/signalr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/chat.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
    @await Html.PartialAsync("_ChatPartial")
</body>
</html>