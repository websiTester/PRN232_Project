.container {
    margin: 0 30px;
}

.banner {
    background-color: #0071dc;
    color: black;
    padding: 30px 0;
    text-align: center;
    margin-bottom: 20px;
    border-radius: 12px;
}

.guarantee {
    background-color: #f57f17; /* Màu cam */
    color: #333; /* Chữ đen */
    padding: 20px 30px; /* Thêm padding */
    margin-bottom: 30px;
    display: flex; /* Dùng flexbox */
    justify-content: space-between; /* Căn 2 bên */
    align-items: center; /* Căn giữa chiều dọc */
    border-radius: 12px; /* Bo góc */
}

.guarantee-text h3 {
    font-size: 1.25rem;
    font-weight: bold;
    margin-bottom: 0.25rem;
    color: #333;
}

.guarantee-text p {
    font-size: 0.9rem;
    margin: 0;
    color: #333;
}

.guarantee-button {
    background-color: #333; /* Nút màu tối */
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 20px; /* Nút bo góc */
    text-decoration: none;
    font-weight: bold;
    white-space: nowrap;
}

    .guarantee-button:hover {
        color: white;
        text-decoration: none;
    }

/*
* CSS CHO PRODUCT SCROLL NGANG
*/
.product-scroll-container {
  width: 100%;
  overflow-x: auto; /* Kích hoạt cuộn ngang */
  padding: 20px 0;
  background-color: #fff; /* Nền trắng cho khu vực cuộn */
  margin-bottom: 20px;
  border: 1px solid #e5e5e5;
  border-radius: 4px;

  /* Ẩn thanh cuộn (cho đẹp) */
  -ms-overflow-style: none; /* IE and Edge */
  scrollbar-width: none; /* Firefox */
}
.product-scroll-container::-webkit-scrollbar {
  display: none; /* Chrome, Safari, and Opera */
}

.product-scroll-row {
  display: flex; /* Bắt buộc */
  flex-direction: row; /* Bắt buộc */
  width: max-content; /* Quan trọng: để row rộng hơn container */
  gap: 20px;
  padding: 0 20px; /* Padding 2 bên để card không dính sát lề */
}

.product-card {
  border: 1px solid #e5e5e5;
  border-radius: 4px;
  padding: 10px;
  text-decoration: none;
  color: inherit;
  transition: box-shadow 0.2s;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  width: 200px; /* Set cứng 1 card rộng 200px */
  flex-shrink: 0; /* Quan trọng: để card không bị co lại */
}

.product-card:hover {
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.product-image {
  width: 100%;
  aspect-ratio: 1; /* Giữ tỷ lệ 1:1 */
  object-fit: cover;
  margin-bottom: 10px;
}

.product-title {
  font-size: 14px;
  margin: 10px 0;
  display: -webkit-box;
  -webkit-line-clamp: 2; /* Giới hạn 2 dòng */
  -webkit-box-orient: vertical;
  overflow: hidden;
  height: 40px; /* Đặt chiều cao cố định cho 2 dòng */
}

.product-price {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-top: auto; /* Đẩy giá xuống dưới cùng */
}

/* ===============================================
PRODUCT DETAIL PAGE
===============================================
*/

.product-detail-container {
    background-color: #fff;
    padding: 2rem;
    border-radius: 8px;
    border: 1px solid #e5e5e5;
}

.product-detail-image {
    max-width: 100%;
    border-radius: 8px;
    border: 1px solid #eee;
}

.product-detail-title {
    font-size: 2rem;
    font-weight: 600;
    color: #333;
    line-height: 1.2;
}

.product-detail-seller {
    font-size: 0.9rem;
    color: #555;
    margin-top: 0.5rem;
}

    .product-detail-seller a {
        text-decoration: none;
    }

.product-detail-quick-rating {
    margin: 1rem 0;
    display: flex;
    align-items: center;
}

.star-display {
    color: #f57f17; /* Màu cam của eBay */
    font-weight: bold;
}

.star-empty {
    color: #ccc;
}

.product-detail-price {
    font-size: 2.2rem;
    font-weight: 700;
    color: #333;
    margin: 1rem 0;
}

/* Các nút Mua hàng */
.btn-buy-now {
    background-color: #3498db;
    color: white;
    font-weight: 600;
    padding: 0.8rem 2.5rem;
    border-radius: 25px;
    border: none;
    margin-right: 1rem;
    width: 100%;
    max-width: 250px;
}

    .btn-buy-now:hover {
        background-color: #2980b9;
        color: white;
    }

.btn-add-cart, .btn-watch-list {
    background-color: white;
    color: #3498db;
    font-weight: 600;
    padding: 0.8rem 1.5rem;
    border-radius: 25px;
    border: 1px solid #3498db;
    margin-top: 0.5rem;
    width: 100%;
    max-width: 250px;
}

    .btn-add-cart:hover, .btn-watch-list:hover {
        background-color: #f8f8f8;
        color: #2980b9;
        border-color: #2980b9;
    }


/* Khu vực Rating */
#ratings-reviews h2 {
    font-weight: 600;
    margin-bottom: 1.5rem;
}

.rating-summary {
    text-align: center;
    padding: 1rem;
}

.rating-score {
    font-size: 4rem;
    font-weight: 700;
    color: #333;
    line-height: 1;
}

.star-display-large {
    font-size: 1.5rem;
    color: #f57f17;
    margin: 0.5rem 0;
}

/* Biểu đồ sao */
.rating-bars {
    margin-top: 1.5rem;
}

.rating-bar-row {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
}

.rating-bar-label {
    flex-basis: 70px;
    font-size: 0.9rem;
    color: #555;
    text-align: right;
}

.progress {
    flex: 1;
    height: 10px;
}

.progress-bar {
    background-color: #f57f17;
}

.rating-bar-count {
    flex-basis: 40px;
    font-size: 0.9rem;
    color: #555;
    text-align: left;
}

/* Danh sách Review */
.review-card {
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 1rem;
    background-color: #fff;
}

.review-header .star-display {
    font-size: 1.1rem;
}

.review-comment {
    font-size: 1.1rem;
    font-weight: 600;
    color: #333;
    margin: 0.75rem 0;
}

.review-footer {
    font-size: 0.9rem;
    color: #555;
}

.review-verified {
    color: #777;
    font-weight: 500;
}

/* ===============================================
CSS CHO GIAI ĐOẠN 5: PURCHASE HISTORY
===============================================
*/

.my-ebay-container {
    background-color: #fff;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    padding: 1.5rem;
}

.my-ebay-sidebar h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
}

.sidebar-nav {
    list-style: none;
    padding-left: 0;
}

    .sidebar-nav li a {
        display: block;
        padding: 0.5rem 0.75rem;
        text-decoration: none;
        color: #333;
        border-radius: 4px;
    }

        .sidebar-nav li a:hover {
            background-color: #f7f7f7;
        }

        .sidebar-nav li a.active {
            font-weight: bold;
            color: #3665f3;
        }

.purchase-title {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 1rem;
}

.purchase-search-form {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    max-width: 500px;
}

.order-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.order-card {
    display: flex;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    padding: 1rem;
    gap: 1rem;
}

.order-card-img {
    flex-shrink: 0;
}

    .order-card-img img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 4px;
    }

.order-card-details {
    flex-grow: 1;
}

    .order-card-details h3 {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .order-card-details p {
        font-size: 0.9rem;
        color: #555;
        margin-bottom: 0.25rem;
    }

.order-card-action {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 150px;
}

.btn-leave-feedback {
    background-color: white;
    color: #3498db;
    font-weight: 600;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    border: 1px solid #3498db;
    text-decoration: none;
    transition: all 0.2s;
}

    .btn-leave-feedback:hover {
        background-color: #f8f8f8;
        color: #2980b9;
        border-color: #2980b9;
    }

.feedback-left-text {
    font-size: 0.9rem;
    color: #555;
    font-style: italic;
}

/* ===============================================
CSS CHO GIAI ĐOẠN 6: LEAVE REVIEW PAGE
===============================================
*/

.leave-review-container {
    padding-top: 2rem;
    padding-bottom: 2rem;
}

.product-info-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
}

    .product-info-header img {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 4px;
        border: 1px solid #e5e5e5;
    }

.product-info-text {
    display: flex;
    flex-direction: column;
}

    .product-info-text span {
        font-size: 0.9rem;
        color: #555;
    }

    .product-info-text strong {
        font-size: 1rem;
        color: #333;
    }

.experience-buttons {
    display: flex;
    gap: 0.5rem;
}

/* CSS cho 5 sao (Radio button) */
.star-rating {
    display: flex;
    flex-direction: row-reverse; /* Đảo ngược để CSS hover hoạt động đúng */
    justify-content: flex-end; /* Căn phải */
    font-size: 2.5rem;
    line-height: 1;
}

    .star-rating input[type="radio"] {
        display: none; /* Ẩn radio button */
    }

    .star-rating label {
        color: #ccc; /* Màu sao trống */
        cursor: pointer;
        transition: color 0.2s;
    }

    /* Khi hover, tất cả các sao (bên trái) sẽ đổi màu */
    .star-rating:not(:hover) input[type="radio"]:checked ~ label,
    .star-rating:hover input[type="radio"] ~ label:hover,
    .star-rating:hover input[type="radio"] ~ label:hover ~ label {
        color: #f57f17; /* Màu sao được chọn hoặc hover */
    }

    /* Màu của sao đã được chọn */
    .star-rating input[type="radio"]:checked + label {
        color: #f57f17;
    }

.btn-leave-feedback-submit {
    background-color: #3498db;
    color: white;
    font-weight: 600;
    padding: 0.75rem 2rem;
    border-radius: 25px;
    border: none;
}