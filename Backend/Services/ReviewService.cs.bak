using Backend.DTOs.Requests;
using Backend.Models;
using Backend.Repositories;
using Microsoft.EntityFrameworkCore;

namespace Backend.Services
{
    public class ReviewService : IReviewService
    {
        private readonly IReviewRepository _reviewRepository;
        private readonly UserRepository _userRepository;
        private readonly CloneEbayDbContext _context; // Để kiểm tra logic

        public ReviewService(
            IReviewRepository reviewRepository,
            UserRepository userRepository,
            CloneEbayDbContext context)
        {
            _reviewRepository = reviewRepository;
            _userRepository = userRepository;
            _context = context;
        }

        public async Task<(bool Success, string Message)> CreateReviewAsync(CreateReviewDto dto, string reviewerUsername)
        {
            // 1. Tìm reviewerId từ username
            var user = await _userRepository.GetByUsernameAsync(reviewerUsername);
            if (user == null)
            {
                return (false, "User not found.");
            }
            var reviewerId = user.Id;

            // 2. Kiểm tra xem người này đã review sản phẩm này chưa
            bool alreadyReviewed = await _context.Reviews
                .AnyAsync(r => r.ProductId == dto.ProductId && r.ReviewerId == reviewerId);

            if (alreadyReviewed)
            {
                return (false, "You have already reviewed this product.");
            }

            // (Tùy chọn: Kiểm tra xem người này có thực sự mua sản phẩm không)
            // (Chúng ta bỏ qua bước này để giữ logic đơn giản theo yêu cầu)

            // 3. Map DTO sang Entity
            var review = new Review
            {
                ProductId = dto.ProductId,
                ReviewerId = reviewerId,
                Rating = dto.Rating,
                Comment = dto.Comment,
                CreatedAt = DateTime.UtcNow
            };

            // 4. Lưu vào DB
            await _reviewRepository.AddReviewAsync(review);

            return (true, "Review added successfully.");
        }
    }
}